<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
     <%- include('./Navbar.ejs') %>


<% blogs.forEach(function(blog){ %>

    <div class="max-w-xs mx-auto overflow-hidden bg-white rounded-lg shadow-md mb-6">
    <div class="relative">
        <img 
            class="w-full h-64 object-cover" 
            src="<%- blog.image %>" 
            alt="Image"
        >
        <div class="absolute top-0 right-0">
            <!-- You can add badge or overlay content here if needed -->
        </div>
    </div>
    <div class="p-4">
        <h3 class="text-xl font-semibold mb-2"><%- blog.title %></h3>
        <p class="text-gray-700 text-base">
            <%- blog.description %>
        </p>
    </div>
    <a href="/blog/<%-blog.id%>">readmore</a>
</div>

<% })%>



</body>
</html>